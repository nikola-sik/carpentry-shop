<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/order.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1 class="centered">Nemate kreiranih narudžbi.</h1>
        <% } else { %>
        <ul class="orders">
            <% orders.forEach(order => { %>
            <li class="orders__item">
                <div class="order-item__header">
                    <div class="order-header__block">
                        <h1>Narudžba - <%= order.title %> </h1>
                    </div>
                    <h1> Datum kreiranja: <%= order.creationDate %> </h1>
                    <h1> Status: <%= order.status %>
                    </h1>

                    <a class="btn" href="/user/order-details/<%= order.id %>">Detalji</a>

                </div>
                <ul class="orders__products">
                    <% order.items.forEach(s => { %>
                    <li class="orders__product__item"><%= s.title %> (<%= s.quantity %>)</li>
                    <% }); %>
                </ul>
            </li>
            <% }); %>
        </ul>
        <%- include('../includes/pagination.ejs',{currentPage:currentPage, nextPage:nextPage, previousPage:previousPage, hasNext:hasNext, hasPreviousPage:hasPreviousPage, lastPage:lastPage}) %>

        <% } %>
    </main>
    <%- include('../includes/footer.ejs') %>